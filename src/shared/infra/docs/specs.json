{
  "openapi": "3.0.1",
  "info": {
    "title": "4all - Exercício de Seleção Backend",
    "version": "1.0.0",
    "description": "Exercício de seleção backend 4all",
    "license": {
      "name": "4all",
      "url": "https://4all.com/"
    },
    "contact": {
      "name": "Renato Hideki Osaka",
      "url": "https://renatohidekiosaka.com.br",
      "email": "oi@renatohidekiosaka.com.br"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/customers": {
      "post": {
        "tags": [
          "customers"
        ],
        "summary": "Cria um novo cliente",
        "requestBody": {
          "description": "Dados para criação de um cliente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Retorna com sucesso os dados do cliente cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "400": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/customers/me": {
      "get": {
        "tags": [
          "customers"
        ],
        "summary": "Consulta os dados do cliente autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados do cliente autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "404": {
            "description": "Retorna mensagem de cliente não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "sessions"
        ],
        "summary": "Realiza a autenticação do cliente",
        "requestBody": {
          "description": "Dados para autenticação do cliente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados da autenticação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "customer": {
                      "$ref": "#/components/schemas/Customer"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies":{
      "get": {
        "tags": [
          "movies"
        ],
        "summary": "Retorna a lista de filmes",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número dá pagina, valor padrão é 1",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "Texto para realizar a busca do filme com base no título",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados dos filmes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "currentPage": {
                      "type": "integer"
                    },
                    "totalPage": {
                      "type": "integer"
                    },
                    "rowsCount": {
                      "type": "integer"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Movie"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/lendings": {
      "post": {
        "tags": [
          "lendings"
        ],
        "summary": "Realiza o empréstimo de filmes",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Dados para empréstimo de filmes",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "return_date": {
                    "type": "string"
                  },
                  "copies": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Retorna com sucesso os dados do empréstimo",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Lending"
                }
              }
            }
          },
          "400": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/lendings/{id}": {
      "put": {
        "tags": [
          "lendings"
        ],
        "summary": "Realiza a devolução do empréstimo",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID do empréstimo",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Retorna sucesso a devolução do empréstimo"
          },
          "404": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "director": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "copies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Copy"
            }
          }
        }
      },
      "Copy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "movie_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Lending": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "string"
          },
          "return_date": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "properties": {
                "copy_id": {
                  "type": "string"
                }
              }
            }
          },
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
