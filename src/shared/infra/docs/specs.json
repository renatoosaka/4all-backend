{
  "openapi": "3.0.1",
  "info": {
    "title": "4all - Exercício de Seleção Backend",
    "version": "1.0.0",
    "description": "Exercício de seleção backend 4all",
    "license": {
      "name": "4all",
      "url": "https://4all.com/"
    },
    "contact": {
      "name": "Renato Hideki Osaka",
      "url": "https://renatohidekiosaka.com.br",
      "email": "oi@renatohidekiosaka.com.br"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/customers": {
      "post": {
        "tags": [
          "customers"
        ],
        "summary": "Cria um novo cliente",
        "requestBody": {
          "description": "Dados para criação de um cliente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example":"Jhon Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Retorna com sucesso os dados do cliente cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "400": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/customers/me": {
      "get": {
        "tags": [
          "customers"
        ],
        "summary": "Consulta os dados do cliente autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados do cliente autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "404": {
            "description": "Retorna mensagem de cliente não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "sessions"
        ],
        "summary": "Realiza a autenticação do cliente",
        "requestBody": {
          "description": "Dados para autenticação do cliente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados da autenticação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "customer": {
                      "$ref": "#/components/schemas/Customer"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/movies":{
      "get": {
        "tags": [
          "movies"
        ],
        "summary": "Retorna a lista de filmes",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número dá pagina, valor padrão é 1",
            "required": false,
            "schema": {
              "type": "integer",
              "example": "1"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "Texto para realizar a busca do filme com base no título",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna com sucesso os dados dos filmes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "currentPage": {
                      "type": "integer",
                      "exaple": "1"
                    },
                    "totalPage": {
                      "type": "integer",
                      "example": "1"
                    },
                    "rowsCount": {
                      "type": "integer",
                      "example": "10"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Movie"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/lendings": {
      "post": {
        "tags": [
          "lendings"
        ],
        "summary": "Realiza o empréstimo de filmes",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
            }
          }
        ],
        "requestBody": {
          "description": "Dados para empréstimo de filmes",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "return_date": {
                    "type": "string",
                    "format": "date"
                  },
                  "copies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uuid"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Retorna com sucesso os dados do empréstimo",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Lending"
                }
              }
            }
          },
          "400": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/lendings/{id}": {
      "put": {
        "tags": [
          "lendings"
        ],
        "summary": "Realiza a devolução do empréstimo",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Bearer token",
            "required": true,
            "schema": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID do empréstimo",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Retorna sucesso a devolução do empréstimo"
          },
          "404": {
            "description": "Retorna mensagem de erro",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Jhon Doe"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "example": "Jurassic Park"
          },
          "director": {
            "type": "string",
            "example": "Steven Spielberg"
          },
          "description": {
            "type": "string",
            "example": "Lorem ipsum dolor sit amet."
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "copies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Copy"
            }
          }
        }
      },
      "Copy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "movie_id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string",
            "example": "VHS"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Lending": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "string",
            "format": "uuid"
          },
          "return_date": {
            "type": "string",
            "format": "date"
          },
          "items": {
            "type": "array",
            "items": {
              "properties": {
                "copy_id": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "An error occurred"
          }
        }
      }
    }
  }
}
